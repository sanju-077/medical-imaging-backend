# Medical Imaging Backend Environment Configuration

# Application Settings
DEBUG=true
LOG_LEVEL=INFO
HOST=0.0.0.0
PORT=8000

# Database Configuration
DATABASE_URL=sqlite:///./medical_imaging.db
# For production with PostgreSQL:
# DATABASE_URL=postgresql://username:password@localhost:5432/medical_imaging_db

# Security
SECRET_KEY=your-super-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Settings
ALLOWED_HOSTS=["http://localhost:3000", "http://localhost:8000", "http://127.0.0.1:3000"]

# File Storage
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=52428800  # 50MB in bytes
ALLOWED_EXTENSIONS=[".jpg", ".jpeg", ".png", ".dcm", ".dicom", ".tiff", ".tif"]

# ML Model Configuration
CLASSIFICATION_MODEL_PATH=./models/classification
SEGMENTATION_MODEL_PATH=./models/segmentation
MODEL_CACHE_SIZE=100

# Redis Configuration (for Celery)
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Logging
LOG_FILE=./logs/app.log
LOG_MAX_SIZE=10485760  # 10MB
LOG_BACKUP_COUNT=5

# Email Configuration (for notifications)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=your-email@gmail.com

# External APIs
SENTRY_DSN=  # Optional: for error monitoring
API_RATE_LIMIT=100  # requests per minute

# Healthcare Compliance
ENCRYPTION_KEY=your-encryption-key-for-sensitive-data
AUDIT_LOG_RETENTION_DAYS=2555  # 7 years
DATA_ANONYMIZATION=true

# ML Model Specific Settings
INFERENCE_TIMEOUT=300  # 5 minutes
BATCH_SIZE=10
MAX_CONCURRENT_INFERENCES=5

# Explainability Settings
EXPLAINABILITY_ENABLED=true
HEATMAP_SAVE_PATH=./explainability/heatmaps
GRADCAM_LAYER_NAME=conv2d_3

# Monitoring and Health
HEALTH_CHECK_INTERVAL=30
METRICS_ENABLED=true
PROMETHEUS_PORT=9090

# Development Settings
AUTO_RELOAD=true
SHOW_DOCS=true
DETAILED_ERRORS=true

# Production Settings
TRUST_PROXY_HEADERS=false
SECURE_COOKIES=false
SSL_VERIFY=true
